<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="Host Name"
        android:key="pref_host"
        android:inputType="text"
        android:defaultValue="example.com"
        android:summary="example.com"
        android:contentDescription="Enter Host Name"/>

    <EditTextPreference
        android:title="Port"
        android:key="pref_port"
        android:inputType="numberDecimal"
        android:defaultValue="5000"
        android:summary="5000"
        android:contentDescription="Enter Remote Port Number"/>
</PreferenceScreen>